extends ../blocks/main.pug

block variables
    - var pageTitle = "Партнерская программа"
    - var inputs = [{"label":"Ваши Ф.И.О.","type":"text"},{"label":"Тип объекта","type":"text"},{"label":"Регион, в котором находится объект","type":"text"},{"label":"Общий метраж","type":"number"},{"label":"Состояние объекта","type":"text"},{ "label":"Пожелания по стоиомсти","type":""},{"label":"Контактный телефон","type":"tel","placeholder":"+7"}]

block content
    section.pt-2.pb-2.content
        .container
            .row.justify-content-between.align-items-center
                .col-5 
                    h1 Удобная продажа недвижимости с&nbsp;DLK&nbsp;Group
                    p.lead.text-secondary.text-bolder.mb-2 DLK&nbsp;Group поможет вам продать вашу недвижимость.
                    p DLK Group поможет вам продать вашу недвижимость. Мы активно сотрудничаем не только с частными лицами, которые хотят продать свой объект, но и с инвесторами, которые регулярно реализуют свои объекты.
                    p Для того, чтобы продать через нас свой объект просим Вас заполнить анкету ниже или связаться по контактным номерам, расположенным после анкеты.  
                .col-6 
                    .row 
                        .col-6
                            .content__image.content__image_circle(style="background-image:url('../img/demo/img1.png');")
                            .content__image.content__image_ellipse(style="background-image:url('../img/demo/img2.png');")
                        .col-6
                            .content__image.content__image_arch(style="background-image:url('../img/demo/img3.png');")
    section.pt-2.pb-2.content
        .container
            .row.justify-content-between
                .col-4
                    p.h2 Анкета продажи
                    p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Gravida aliquam morbi lacinia maecenas. Nec feugiat elementum at augue sit. Placerat odio amet cursus morbi.
                    p.mt-4.mb-2.lead.text-secondary.text-bolder Контактная информация для партнёров
                    .row 
                        .col-5
                            p.content__contact-heading Телефон
                            a(href=tel.link).text-bolder.footer__contact-link=tel.item
                        .col-7
                            p.content__contact-heading E-mail
                            a(href=email.link).text-bolder.footer__contact-link=email.item
                .col-8
                    .content__request 
                        form.form(action="")
                            .row.align-items-center.justify-content-end
                                for input in inputs
                                    .col-4.text-right
                                        label.text-secondary=input.label
                                    .col-8
                                        input(type=input.type, placeholder=input.placeholder).input.input_line
                                .col-8
                                    button.btn.btn_action(type="submit" style="width:100%;") Отправить запрос