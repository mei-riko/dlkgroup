                .filters__item.filters__item_location
                    .filters__heading Город и регион
                    .filters__options 
                        +checkboxFilter('city1','Адлер')
                        +checkboxFilter('city2','Бытха',true)
                        +checkboxFilter('city3','Вардане')(class="checkbox--disabled")
                        +checkboxFilter('city4','Сочи')
                        +checkboxFilter('city5','Лазаревское')
                        +checkboxFilter('city6','Новый Сочи')
                        +checkboxFilter('city7','Туапсе')
