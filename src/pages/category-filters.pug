                    .filters__heading.filters__heading--has-value Квартира в новостройке
                    .filters__options
                        +checkbox('type1','Квартира в новостройке')
                        +checkbox('type2','Квартира во вторичке')
                        +checkbox('type3','Дом')(class="checkbox--disabled")
                        +checkbox('type4','Таунхаус')
                .filters__item.filters__item_room
                    .filters__heading.filters__heading--has-value Студия, 1 комн.
                    .filters__options 
                        +checkbox('room1','Студия')
                        +checkbox('room2','1 комната')
                        +checkbox('room3','2 комнаты')
                        +checkbox('room4','3 комнаты')
                        +checkbox('room5','4 комнаты')
                        +checkbox('room6','5 комнат')
                        +checkbox('room7','6 комнат')
                        +checkbox('room8','Свободная планировка')
